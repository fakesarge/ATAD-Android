<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".PasswordSearchActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="702dp"
        android:layout_height="554dp"
        android:layout_marginTop="-160dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/logo"

        />

    <!-- Title Text -->

    <!-- Input Field Background -->

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="168dp"
        android:fontFamily="@font/regular"
        android:text="Advanced Dark Net Data Searching"
        android:textColor="#808493"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/inputfeildtwo"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <!-- Password Input -->
    <EditText
        android:id="@+id/searchQ"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@null"
        android:backgroundTint="#273253"
        android:hint="Enter A Password You Use"
        android:imeOptions="actionSearch"
        android:inputType="textPassword"
        android:maxLines="1"
        android:padding="12dp"
        android:textColor="@color/white"
        android:textColorHint="#808493"
        app:layout_constraintBottom_toBottomOf="@+id/inputfeildtwo"
        app:layout_constraintEnd_toEndOf="@+id/inputfeildtwo"
        app:layout_constraintStart_toStartOf="@+id/inputfeildtwo"
        app:layout_constraintTop_toTopOf="@+id/inputfeildtwo" />

    <!-- Search Button -->

    <!-- Results Container -->
    <ImageButton
        android:id="@+id/searchB"
        android:layout_width="158dp"
        android:layout_height="32dp"
        android:scaleX="1.9"
        android:scaleY="1.9"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/searchbutton"
        android:text="Search"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/inputfeildtwo"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/inputfeildtwo"
        app:layout_constraintTop_toBottomOf="@+id/inputfeildtwo" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchB">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Leak Information Title -->
            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Leak Information"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Leak Found -->
            <TextView
                android:fontFamily="@font/regular"
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Leak Found: -"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <!-- Breach Status -->
            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Breach Status: -"
                android:fontFamily="@font/regular"

                android:textColor="@color/white"
                android:textSize="16sp" />

            <!-- Breach Amount -->
            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/regular"
                android:text="Breach Amount: -"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <!-- Safety Precautions Title -->
            <TextView
                android:id="@+id/textView11"
                android:fontFamily="@font/regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Safety Precautions"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Safety Tips -->
            <TextView
                android:id="@+id/textView12"
                android:layout_width="333dp"
                android:layout_height="288dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/regular"
                android:text="1. Change your password immediately\n2. Enable two-factor authentication\n3. Use a password manager\n4. Check other accounts using same password"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>

<!--    <ImageButton-->
<!--        android:id="@+id/imageButton"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:src="@drawable/searchbutton"-->
<!--        tools:layout_editor_absoluteX="154dp"-->
<!--        tools:layout_editor_absoluteY="304dp" />-->
</androidx.constraintlayout.widget.ConstraintLayout>