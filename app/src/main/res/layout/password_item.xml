<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">


    <!-- Background Frame Image -->
    <ImageView
        android:layout_width="@dimen/_300sdp"
        android:layout_height="157dp"
        android:scaleType="fitXY"
        android:src="@drawable/frame" />

    <!-- Content Container -->
    <LinearLayout
        android:layout_width="415dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"> <!-- Adjust padding to fit inside frame -->

        <!-- Name Row -->
        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name: Instagram.com"
            android:textColor="@color/white"
            android:fontFamily="@font/regular"
            android:textSize="16sp"
            android:paddingLeft="@dimen/_10sdp"/>

        <!-- Password Row (with dots) -->

        <!-- Breach Status Row -->
        <TextView
            android:id="@+id/passwordTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Password: •••••••••"
            android:textColor="@color/white"
            android:fontFamily="@font/regular"
            android:textSize="16sp"
            android:paddingLeft="@dimen/_10sdp"/>


        <TextView
            android:id="@+id/breachTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Breach Status: Breached"
            android:fontFamily="@font/regular"
            android:textColor="#FF0000"
            android:textSize="16sp"
            android:paddingLeft="@dimen/_10sdp"/>
        <!-- Add this Button at the bottom of your existing layout -->
        <Button
            android:id="@+id/loginButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Auto Login"
            android:backgroundTint="#4CAF50"
            android:textColor="@color/white"/>


    </LinearLayout>
</FrameLayout>